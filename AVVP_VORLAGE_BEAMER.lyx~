    \begin{frame}[plain,noframenumbering]
      \titlepage
    \end{frame}
  }%
}
\makeatother

% AVVP Titelseite mit Slogan auf der Titelseite
\makeatletter
\setbeamertemplate{title page}{%
  \vbox{}
  \vfill
  \begingroup
    \centering

    % --- Title ---
    \setbeamerfont{title}{size=\LARGE}
    {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par}

    % --- Subtitle ---
    \ifx\insertsubtitle\@empty\else
      \vskip0.5em
      {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}
    \fi

    % --- Date (blue, under authors) ---
    \vskip1em
    {\usebeamerfont{date}\color{AVVPBlue}\insertdate\par}

    % --- Authors (blue, directly under subtitle) ---
    \vskip0.5em
    {\usebeamerfont{author}\color{AVVPBlue}\insertauthor\par}

    % --- Title graphic (logo) ---
    \ifx\inserttitlegraphic\@empty\else
      \vskip2.2em
      \begingroup
      \setlength{\fboxsep}{0pt}%
      \setlength{\fboxrule}{0pt}%
      \resizebox{0.30\paperwidth}{!}{\inserttitlegraphic}\par
      \endgroup
    \fi

	% --- Slogan (white, under logo, scaled to same width) ---
	\vskip0.8em
	\resizebox{0.3\paperwidth}{!}{%
	  {\AVVPTitleFont\color{white}Faszination. Astronomie. Erleben.}%
	}\par

    % --- Institute / Date (unchanged) ---
    \vskip2em
    {\usebeamerfont{institute}\insertinstitute\par}

  \endgroup
  \vfill
}
\makeatother


